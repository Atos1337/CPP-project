{
    "manifest_version": 2,
    "minimum_chrome_version": "29",
    
    "name": "Test extension",
    "version": "0.1",
    "description": "Native messaging test",
    
    "permissions": [
        "nativeMessaging",
        "tabs",
        "activeTab",
        "background",
        "http://*/", "https://*/"
        ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}